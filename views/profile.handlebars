<section class="hero is-medium is-info is-bold">
  <div class="hero-body">
    <div class="container">
        <figure class="image is-128x128">
            <img src="https://api.adorable.io/avatars/285/{{username}}.png" alt="Image">
        </figure>
        <h1 class="title is-2">
        Hello {{username}}
        </h1>
        <h2 class="subtitle is-3">
        Welcome to Photo Share
        </h2>
    </div>
  </div>
</section>

<div class="container">
    <div class="nav">
    <div class="nav-right">
        <div class="nav-item">
             <a class="button is-warning open-modal" type="button" href="/album">Create Album</a> 
            {{!-- <a class="button is-warning open-modal" >Create Album</a> --}}
        </div>
    </div>
</div>
</div>

